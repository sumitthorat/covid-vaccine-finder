<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_session_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        android:layout_margin="8dp"
        app:strokeWidth="2dp">

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_session_center_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Center Name: Life Care Hospital" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_session_center_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="District Name: District name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_session_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Fees: 400" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_session_min_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Minimum Age Limit: 45" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_session_available_capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Available Capacity: 210" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_session_vaccine_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Vaccine: " />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_session_slots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Slots: "/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>